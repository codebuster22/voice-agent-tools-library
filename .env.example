# =============================================================================
# VAPI Voice Agent Configuration
# =============================================================================

# VAPI API Configuration
VAPI_API_KEY=your_vapi_api_key_here
VAPI_BASE_URL=https://api.vapi.ai
VAPI_KNOWLEDGE_BASE_TOOL_ID=your_knowledge_base_tool_id_here

# Server Configuration  
SERVER_BASE_URL=https://your-server.railway.app
# For local development: SERVER_BASE_URL=http://localhost:8000

# =============================================================================
# Google Calendar Integration
# =============================================================================

# Google Calendar Authentication
GOOGLE_USER_EMAIL=staff@yourcompany.com
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account.json
# Alternative: use client_secret.json with OAuth flow

# =============================================================================
# Knowledge Base Configuration
# =============================================================================

# GitHub Raw URLs for Knowledge Base Content (comma-separated)
GITHUB_RAW_URLS=https://raw.githubusercontent.com/user/repo/main/kb/about-company.md,https://raw.githubusercontent.com/user/repo/main/kb/financing-options.md,https://raw.githubusercontent.com/user/repo/main/kb/services-provided.md,https://raw.githubusercontent.com/user/repo/main/kb/current-offers.md

# Knowledge Base Settings
KB_CACHE_DURATION_MINUTES=30
KB_MAX_FILE_SIZE_MB=10
KB_TIMEOUT_SECONDS=30
KB_FILE_NAME_PREFIX=kb_

# =============================================================================
# Database Configuration 
# =============================================================================

# Supabase Database
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_anon_key_here

# =============================================================================
# Development & Deployment
# =============================================================================

# Environment
NODE_ENV=production
# For local development: NODE_ENV=development

# Port Configuration (optional)
PORT=8000

# =============================================================================
# Voice Agent Business Configuration
# =============================================================================

# Dealership Information
DEALERSHIP_NAME=Elite Motors
DEALERSHIP_PHONE=+1-555-123-4567
DEALERSHIP_ADDRESS=123 Auto Lane, Cityville, ST 12345

# Default Business Hours
BUSINESS_HOURS_START=9
BUSINESS_HOURS_END=17
WORKING_DAYS=0,1,2,3,4
# 0=Monday, 1=Tuesday, 2=Wednesday, 3=Thursday, 4=Friday, 5=Saturday, 6=Sunday